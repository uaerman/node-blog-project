<%- include("partials/_header") %>

  <body>
    <%- include("partials/_menu") %>
    <h1 class="text_align_center">Posts</h1>
      <div class="container" style="margin-top: 25px">
        <div class="row">
          <%for (post of posts) {%>
            <div class="col-sm-3">
              <div class="card posts-card" style="width: 18rem; margin-top: 25px;">
                <img class="card-img-top" src="<%=post.url%>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%=post.title%></h5>
                  <p class="card-text"><%=post.content.substring(0, 80)%></p>
                  <a href="/posts/<%=post._id%>" class="btn btn-primary">Read more</a>
                </div>
              </div>
            </div>
            <%}%>
        </div>
      </div>
      </div>
      <%- include("partials/_footer") %>
  </body>